<html>
{{ block("head", "head.twig") }}
    <body>
    {{ block("Navigation", "navigation.twig") }}
        <section>
            <div class="container d-flex flex-column ">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2>Gestion des utilisateurs</h2>
                        <hr class="star-primary">
                    </div>
                    <div  class="row justify-content-center mb-4" >
                    {% if change_right %}
                        Modification(s) effectuée(s)
                    {% endif %}
                    </div>
                </div>
                <div class="row justify-content-center" >
                    <div class="col-lg-6 ">
                        <form action="/user_management/" method="post">
                            <input type="hidden" name="change_right" value="1">
                            {% for user in users %}
                            <div class="d-flex flex-row border">
                                <input type="hidden" name="users_from_post[]" value="{{user.user_id}}">
                                <div class="col-8 control-group mb-3 d-flex flex-column justify-content-center">
                                    <div class="form-group col-xs-12 mx-3">
                                        
                                        <input type="checkbox" name="user_valided[]" value="{{user.user_id}}" 
                                        {% if user.valided %}
                                            checked
                                        {% endif %}
                                        >
                                        Valider le compte utilisateur
                                    </div>
                                    <div class="form-group col-xs-12  mx-3">
                                        
                                        <input type="checkbox" name="user_is_admin[]" value="{{user.user_id}}"
                                        {% if user.is_admin %}
                                            checked
                                        {% endif %}
                                        >
                                        Donner les droits d'administration à l'utilisateur 
                                    </div>
                                </div> 
                                <div class="col control-group mb-1">
                                    <div class="row control-group mb-3">
                                        <div class="form-group col-xs-12 d-flex justify-content-start">
                                           Prénom : {{user.firstname}}
                                        </div>
                                        <div class="form-group col-xs-12 d-flex justify-content-start">
                                           Nom : {{user.lastname}}
                                        </div>
                                        <div class="form-group col-xs-12 d-flex justify-content-start">
                                           Login : {{user.login}}
                                        </div>                                     
                                    </div>  
                                </div>
                            </div>
                            {% endfor %}
                            <p><input type="submit" value="Valider"></p>
                        </form>
                    </div>
                <div>
            <div>
        </section>
    </body>
        {{ block("Footer", "footer.twig") }}
</html>