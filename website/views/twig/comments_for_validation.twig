<html>
{{ block("head", "head.twig") }}
    <body>
    {{ block("Navigation", "navigation.twig") }}
        <section>
            <div class="container d-flex flex-column ">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2>Validation des commentaires</h2>
                        <hr class="star-primary">
                    </div>
                </div>
                <div class="row justify-content-center" >
                    <div class="col-lg-6 ">
                        <form action="/comment_validation/" method="post">
                            {% for commmentDATAS in comments %}
                            <div class="d-flex flex-row border">
                                <div class="col-1 control-group mb-3 d-flex flex-column justify-content-center">
                                    <div class="form-group col-xs-12">
                                        <input type="checkbox" name="comments_valided[]" value="{{commmentDATAS.id}}">
                                    </div>
                                </div> 
                                <div class="col control-group mb-1">
                                    <div class="row control-group mb-3">
                                        <div class="form-group col-xs-12 d-flex justify-content-start">
                                            Auteur : {{commmentDATAS.author_login}} | Date de cr√©ation : {{commmentDATAS.creationDate}}
                                        </div>
                                    </div>  
                                    <div class="row control-group">
                                        <div class="form-group col-xs-12 d-flex justify-content-start">
                                            {{ commmentDATAS.comment }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                            <p><input type="submit" value="Valider"></p>
                        </form>
                    </div>
                <div>
            <div>
        </section>
    </body>
        {{ block("Footer", "footer.twig") }}
</html>